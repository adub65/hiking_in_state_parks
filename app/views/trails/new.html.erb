<%= form_for @trail do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>

<%= f.label :distance %>
<%= f.text_field :distance %><br>

<%= f.label :difficulty %>
<%= f.text_field :difficulty %>

<%= f.select :trail_composition, [["Gravel"], ["Dirt"], ["Paved"]], prompt: "Please select the material of the trail" %>

<%= f.submit "Create a New Trail" %>

<% end %>